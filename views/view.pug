extends layout

block content
  .container
    h1 Confirm Deletion

    p Are you sure you want to delete this contact?
    h3 #{contact.Title} #{contact.FirstName} #{contact.LastName}

    form(method='POST', action=`/contacts/${contact.ID}/delete`)
      button.btn.btn-danger(type='submit') Yes, Delete
      a(href='/contacts').btn Cancel
